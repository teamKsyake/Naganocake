<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 mb-5">
      <h3>商品一覧<small>(全<%= Item.all.count %>件)</small></h3>
    </div>
  </div>

<div class="row">
  <div class="col-md-2">
   <%= render "admin/genres/sidebar", genres: @genres %>
  </div>
  <div class="col-md-10">
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-3 col-sm-6 mb-3">
          <div class="mb-2">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image, size: "200x150", style: "object-fit: cover;" %>
            <% end %>
          </div>
          <div class="mb-3">
            <%= item.name %>
          </div>
          <div class="mb-3">
            <% if item.is_available == true %>
              <p>¥<%= item.price %></p>
            <% else %>
              <p class="card-text text-danger">販売停止中</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
  <div class="row">
    <div class="col-md-12 mb-5 text-center">
        <%= paginate @items %>
    </div>
  </div>
</div>

