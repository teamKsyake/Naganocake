<div class="container">
  <div class="row">
    <h3 class="col-lg-3 col-md-4 col-sm-4 bg-light text-center">
      注文履歴一覧
    </h3>
  </div>

  <div class="row">
    <table class="col-12 table table-bordered border-dark">
      <thead class="thead-light">
        <th>注文日</th>
        <th class="col-3">商品</th>
        <th class="col-1">金額</th>
        <th class="col-3">配送先</th>
        <th class="col-2">ステータス</th>
        <th class="col-1"></th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d')%></td>
          <td>
            <% order.item_orders.each do |detail| %>
            <%= detail.item.name %>
            <% end %>
          </td>
          <td><%= order.total_amount %></td>
          <td><%= order.address_display %></td>
          <td><%= Order.statuses_i18n[order.status] %></td>
          <td><%= link_to "詳細", order_path(order), class: "form-inline", class:"btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
