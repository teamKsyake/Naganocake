<!-- app/views/public/orders/new.html.erb -->
<h1>注文情報入力</h1>

<%= form_with(model: @order, url: orders_path, method: :post) do |form| %>
  <div>
    <h2 style="font-size: 1.2rem; color: #666;">支払方法</h2>
    <%= form.radio_button :payment_method, "クレジットカード" %> クレジットカード<br>
    <%= form.radio_button :payment_method, "銀行振込" %> 銀行振込<br>
  </div>

  <div>
    <h2 style="font-size: 1.2rem; color: #666;">お届け先</h2>
    <%= form.radio_button :delivery, "ご自身の住所" %> ご自身の住所<br>
    <%= form.radio_button :delivery, "登録済住所から選択" %> 登録済住所から選択<br>
    <%= form.radio_button :delivery, "新しいお届け先" %> 新しいお届け先<br>

        <div class="form-group row">
          <label for="post_code" class="col-sm-3 col-form-label">郵便番号（ハイフンなし）</label>
          <div class="col-sm-6">
            <%= form.text_field :postcode, class: "form-control border-dark", placeholder: "0000000" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="postcode" class="col-sm-3 col-form-label">住所</label>
          <div class="col-sm-6">
            <%= form.text_field :address, class: "form-control border-dark", placeholder: "東京都渋谷区代々木神園町0-0" %>
          </div>
        </div>

        <div class="form-group row">
          <label for="name" class="col-sm-3 col-form-label">宛名</label>
          <div class="col-sm-3">
            <%= form.text_field :name, class: "form-control border-dark", placeholder: "令和道子" %>
          </div>
        </div>
      </div>

      <div class="col-10 text-center">
        <%= form.submit "確認画面へ進む", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>