<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-5">新規会員登録</h3>
    </div>
  </div>
      <!--<table class="table table-borderless">-->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-md-4">
        <p>名前</p>
      </div>
      <div class="col-md-8">
        <div class="field">
          <%= f.label :last_name, "(姓)" %>
          <%= f.text_field :last_name %>

          <%= f.label :first_name, "(名)" %>
          <%=f.text_field :first_name %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <p>フリガナ</p>
      </div>
      <div class="col-md-8">
        <div class="field">
          <%= f.label :last_name_kn, "(セイ)" %>
          <%= f.text_field :last_name_kana %>

          <%= f.label :first_name_kn, "(メイ)" %>
          <%= f.text_field :first_name_kana %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <p><%= f.label :email, "メールアドレス" %></p>
      </div>
      <div class="col-md-8 mb-3">
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :postcode, "郵便番号" %>
      </div>
      <div class="col-md-8 mb-3">
        <%= f.text_field :postcode %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
       <%= f.label :address, "住所" %>
      </div>
      <div class="col-md-8 mb-3">
        <%= f.text_field :address, size: "50" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :phone_number, "電話番号" %>
      </div>
      <div class="col-md-8 mb-3">
        <%= f.text_field :phone_number %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :password, "パスワード(6文字以上)" %>
      </div>
      <div class="col-md-8 mb-3">
        <!--<%# if @minimum_password_length %>-->
        <!-- <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
        <!--<%# end %>-->
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :last_name, "パスワード(確認用)" %>
      </div>
      <div class="col-md-8 mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-8 mb-3 mt-3">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12 mb-5">
      <h3>既に登録済みの方</h3>
      <p><%= render "public/shared/links" %>からログインしてください</p>
    </div>
  </div>

</div>
