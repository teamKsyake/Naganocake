<div class~"col-xs-12">
  <h2 class="head-line text-left px-4 title">配送先登録/一覧</h2>
    <%= form_with(model: @address, :url => {:controller => "public/addresses"}) do |f| %>
      <div class="address col-xs-10 mt-5">
        <div class="form-group col-xs-12 text-left">
          <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
          <%= f.text_field :postcode, class: "col-xs-4 form-control-static postcode" %>
        </div>
        <div class="form-group col-xs-12 text-left">
          <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
          <%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
        </div>
        <div class="form-group col-xs-12 text-left">
          <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
          <%= f.text_field :name, class: "col-xs-4 form-control-static name" %>
        </div>
        <%= f.submit '新規登録' ,class:"col-xs-2 pull-right btn-lg btn-success" %><!-- ① 新規登録ボタンを緑に -->
      </div>
    <% end %>

  <div id="create" >
    <% if @addresses.present? %>
      <table class="table table-hover table-bordered">
        <thead>
          <tr class="info">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr id="destroy-<%= address.id %>">
              <td class="text-left">
                <%= address.postcode %>
              </td>
              <td class="text-left">
                <%= address.address %>
              </td>
              <td class="text-left">
                <%= address.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_address_path(address), class: "glyphicon-pencil btn-sm btn-primary" %>
              </td>
              <td>
                <%= link_to "削除する", address_path(address), method: :delete, "data-confirm" => "本当に削除してもよろしいですか？", class: "btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
