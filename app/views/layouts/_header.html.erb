<header class="border-bottom bg-light">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <% if admin_signed_in? %>
        <%= link_to "NaganoCake", admin_root_path, class:"header-title navbar-brand" %>
      <% else %>
        <%= link_to "NaganaCake", root_path, class:"header-title navbar-brand btn btn-success" %>
      <% end %>
       <button class="navbar-toggler mx-5" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
       </button>
       <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <% if customer_signed_in? %>
          <!--customerログイン時に表示されるheader-->
            <li class="nav-item active">
              <span class="nav-link text-dark">ようこそ<%= last_name(current_customer)%>さん</span>
            </li>
            <li class="nav-item">
              <%= link_to "マイページ", customers_mypage_path(current_customer), class: "btn btn-outline-secondary mx-3 my-1"%>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>
            <li class="nav-item">
              <%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", customers_sign_out, method: :delete, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>

          <% elsif admin_signed_in? %>
          <!--adminログイン時に表示されるheader-->
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>
            <li class="nav-item">
              <%= link_to "注文履歴一覧", admin_root_path, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト",  destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>

          <% else %>
          <!--ログインしていない時に表示されるheader-->
            <li class="nav-item">
              <%= link_to "about", about_path, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary mx-3 my-1" %>
            </li>
          <% end %>
          <% if admin_signed_in? %>
            <%= render "layouts/search" %>
          <% end %>
        </ul>
      </div>
    </div>




  </nav>
</header>