<div class="container mt-5 md-5">
  <div class="row">
    <div class="col">
      <h2>ジャンル編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <table class="table">
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, value: @genre.name %>
        <%= f.submit "変更を保存する", class: "btn btn-success genre-submit" %>
        </table>
      <% end %>
    </div>
  </div>
</div>