<div class="genre-index">
  <div class="container mt-5 md-5">
    <div class="row mb-5">
      <div class="col">
        <h2 class="bg-light d-inline px-4">ジャンル一覧・追加</h2>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-10">
        <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, class: "col-nd-4" %>
          <%= f.submit "新規登録", class: "btn btn-success genre-submit" %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-5 mt-3">
        <table class="table">
          <thead>
            <tr class="bg-light">
              <th>ジャンル</th>
              <th colspan="1"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr class="border-bottom">
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>