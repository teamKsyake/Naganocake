<div class="container">
  <h4 class="my-5 text-center bg-light d-inline px-4">注文詳細画面</h4>
    <div class="row-justify-content-center">
      <div class="col-xs-12"></div>
        <table class="table table-borderless">
          <thead>
            <tbody>
              <tr>
                <th class="col-xs-3 row-title">購入者</th>
                <td class="col-xs-9"><%= @order.customer.full_name %></td>
              </tr>
              <tr>
                <th class="col-xs-3 row-title">注文日</th>
                <td class="col-xs-9"><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
              </tr>
              <tr>
                <th class="col-xs-3 row-title">配送先</th>
                <td class="col-xs-9"><%= @order.address %></td>
              </tr>
              <tr>
                <th class="col-xs-3 row-title">支払い方法</th>
                <td class="col-xs-9"><%= @order.payment_method %></td>
              </tr>
              <tr>
                <th class="col-xs-3 row-title">注文ステータス</th>
                <td class="col-xs-9">
                  <%= form_with model: [:admin, @order] do |f| %>
                    <%= f.select :status, Order.statuses.keys %>
                    <%= f.submit '更新', class:"btn btn-success" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </thead>
        </table>
      </div>
      <div class="item-table">
        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @order_items.each do |order_item| %>
              <tr>
                <td><%= order_item.item.name %></td>
                <td><%= order_item.ordered_price %></td>
                <td><%= order_item.count %></td>
                <td><%= order_item.subtotal_price %>円</td>
                <%= form_with [:admin, order_item] do |f| %>
                <td>
                  <%= f.submit :item_status, OrderItem.item_atatuses.keys.to_a %>
                </td>
                <td>
                  <%= f.submit '更新', class:"btn btn-success" %>
                </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="price-table">
        <table class-"row">
          <tbody>
            <tr>
              <th class="col-xs-3 row-title">合計金額</th>
              <td class="col-xs-9"><%= @order.total_amount-@order.postage %>円</td>
            </tr>
            <tr>
              <th class="col-xs-3 row-title">送料</th>
              <td class="col-xs-9"><%= @order.postage %>円</td>
            </tr>
            <tr>
              <th class="col-xs-3 row-title">請求金額合計</th>
              <td class="col-xs-9"><%= @order.total_amount %>円</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>