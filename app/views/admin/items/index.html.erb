<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品一覧</h2>
    </div>
      <div class="col-sm-2 px-sm-0 text-right md-2">
        <%= link_to new_admin_item_path, class:"btn btn--circle btn--shadow" do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </div>
      <div class="row">
        <div class="col-sm-10 px-sm-0 mx-auto md-5">
          <table class="table rext-center abmin-items md-5">
            <thead>
              <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
              <th>ステータス</th>
              </tr>
            </thead>
            <%= @items.each do |item| %>
            <tbody>
              <tr>
                <td class="align-middle"><%= item.id %></td>
                <td class="align-middle"><%= link_to admin_item_path(item.id) do %>
                  <u><%= item.name %></u>
                </td>
                <% end %>
                <td class="align-middle"><%= item.price_excluding_tax %></td>
                <td class="align-middle"><%= item.genre.name %></td>
                <td class="align-middle">
                  <% if item.sales_status == true %>
                    <p class="text-succes font-weight-hold">販売中</p>
                  <% else %>
                    <p class="text-danger font-weight-bold">販売停止中</p>
                  <% end %>
                </td>
              </tr>
            </tbody>
            <% end %>
          </table>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>