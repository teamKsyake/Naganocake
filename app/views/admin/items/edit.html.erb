<div class="container-fluid">
 <div class="row">
  <div class="col-sm-12 mb-5">
   <h3>商品編集</h3>
   </div>
 </div>
 <div class="row">
  <div class="col-sm-12 align-items-center">
   <%= form_with(model: @item, url: admin_item_path(@item), local: true) do |f| %>

   <div class="row justify-content-start">
    <div class="col-sm-4">
     <p>商品画像</p>
    </div>
    <div class="col-sm-8 mb-3">
     <%= f.file_field :image, accept: 'image/*' %>
    </div>
   </div>

   <div class="row justify-content-start">
    <div class="col-sm-4">
     <p>商品名</p>
    </div>
   <div class="col-sm-8 mb-3">
    <%= f.text_field :name, size: "40" %>
   </div>
  </div>

  <div class="row justify-content-start">
   <div class="col-sm-4">
    <p>商品説明</p>
   </div>
   <div class="col-sm-8 mb-3">
    <%= f.text_area :introduction, size: "40x5" %>
   </div>
  </div>

  <div class="row justify-content-start">
   <div class="col-sm-4">
    <p>ジャンル</p>
   </div>
   <div class="col-sm-8 mb-3">
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>
   </div>
  </div>

  <div class="row justify-content-start">
   <div class="col-sm-4">
    <p>税抜価格</p>
   </div>
   <div class="col-sm-8 mb-3">
    <%= f.number_field :price %>
   </div>
  </div>

  <div class="row justify-content-start">
   <div class="col-sm-4">
    <p>販売ステータス</p>
   </div>
   <div class="col-sm-8 mb-5">
    <%= f.select :is_available, [['販売中',1],['販売停止中',0]] %>
   </div>
  </div>

    <%= f.submit '変更を保存', class: "btn btn-success" %>
   <% end %>
  </div>
 </div>
</div>
